<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to Nougat Bank!"
        android:textSize="34sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="0"
        android:autofillHints="Input Username or ID"
        android:ems="10"
        android:hint="Username or ID"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:ignore="HardcodedText,InefficientWeight,SpeakableTextPresentCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:autofillHints="Input Password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:text="LOGIN"
        tools:ignore="HardcodedText" />

</LinearLayout>