<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".BankTransfer">

    <TextView
        android:id="@+id/transferHeader"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Transfer"
        android:textSize="34sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/transferId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="0"
        android:autofillHints="Input Username or ID"
        android:ems="10"
        android:hint="Username or ID"
        android:inputType="textPersonName"
        android:textSize="24sp"
        tools:ignore="HardcodedText,InefficientWeight" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/transferAmount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autofillHints="Input Amount"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/transferConfirmBtn"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:text="CONFIRM"
        tools:ignore="HardcodedText" />

</LinearLayout>